        "goalId": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "reward": {
          "$ref": "#/definitions/serviceReward"
        },
        "claimedAt": {
          "type": "string"
        }
      }
    },
    "serviceGetChallengesResponse": {
      "type": "object",
